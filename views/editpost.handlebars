<div class="container">
  <form class="new-post-form">
    <div class="row mb-3">
      <label for="title-post" class="col-sm-2 col-form-label">Title</label>
      <div class="col-sm-10">
        <input
          type="title"
          class="form-control"
          id="title-update-post"
          placeholder="{{title}}"
        />
      </div>
    </div>
    <div class="row mb-3">
      <label for="text-post" class="col-sm-2 col-form-label">Text</label>
      <div class="col-sm-10">
        <input
          type="text"
          class="form-control"
          id="text-update-post"
          placeholder="{{text}}"
        />
      </div>
    </div>
    <button type="submit" class="btn btn-primary" id="update-Btn">Post</button>
  </form>
</div>